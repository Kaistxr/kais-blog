      "source": [
        "#| echo: false\n",
        "#| fig-cap: \"US Non-Farm Payrolls - Monthly Change\"\n",
        "\n",
        "import pandas_datareader.data as web\n",
        "import matplotlib.pyplot as plt\n",
        "import datetime\n",
        "\n",
        "try:\n",
        "    # Set start and end dates for the data\n",
        "    start = datetime.datetime(2023, 1, 1)\n",
        "    end = datetime.date.today()\n",
        "\n",
        "    # Fetch Non-Farm Payrolls data from FRED\n",
        "    nfp = web.DataReader('PAYEMS', 'fred', start, end)\n",
        "\n",
        "    # Calculate the monthly change\n",
        "    nfp_change = nfp.diff()\n",
        "    nfp_change.dropna(inplace=True)\n",
        "\n",
        "    # Create the plot\n",
        "    fig, ax = plt.subplots(figsize=(10, 5))\n",
        "    ax.bar(nfp_change.index, nfp_change['PAYEMS'], color='#0056b3', width=20)\n",
        "\n",
        "    # Style the plot\n",
        "    ax.set_title('US Non-Farm Payrolls - Monthly Change (in Thousands)', fontsize=14)\n",
        "    ax.set_ylabel('Jobs Added/Lost')\n",
        "    ax.grid(True, linestyle='--', axis='y', alpha=0.6)\n",
        "    ax.axhline(0, color='black', linewidth=0.5)\n",
        "    fig.autofmt_xdate()\n",
        "    \n",
        "    plt.show()\n",
        "\n",
        "except Exception as e:\n",
        "    print(f\"<p style='color: red;'>Could not load NFP chart: {e}</p>\")"
      ],
